<?xml version="1.0" encoding="utf-8"?>
<!-- This page is for all shared goods. Like this is a list of everything everyone can see. Kay? This is not yo personal screen son. -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

	<LinearLayout

		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:background="@color/colorAccent"
		android:orientation="vertical"
		tools:context="com.rip.roomies.activities.duties.ListAllGoods">

		<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/colorPrimary"
			android:gravity="center_horizontal"
			android:padding="10dp"
			android:text="Goods"
			android:textColor="@color/colorAccent"
			android:textSize="30sp" />

		<TextView
			android:id="@+id/no_goods_msg"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@color/black"
			android:textSize="12pt"
			android:padding="20dp"
			android:visibility="gone"
			android:text="There are no goods to display." />

		<com.rip.roomies.views.GoodContainer
			android:id="@+id/good_list"
			android:layout_width="match_parent"
			android:layout_height="wrap_content" />
	</LinearLayout>

	<Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Logs"
		android:id="@+id/logs_btn"
		android:layout_gravity="bottom"
		android:layout_marginBottom="10dp"
		android:background="@drawable/rec_border"
		android:padding="20dp"
		android:layout_margin="10dp"
		android:textColor="@color/colorPrimary"
		android:textSize="15sp"/>

	<Button
		android:id="@+id/good_addbtn"
		android:layout_width="70dp"
		android:layout_height="70dp"
		android:layout_gravity="right|bottom"
		android:layout_margin="10dp"
		android:background="@drawable/circleblue"
		android:text="@string/plus"
		android:textColor="@color/colorAccent"
		android:textSize="40dp" />
</FrameLayout>