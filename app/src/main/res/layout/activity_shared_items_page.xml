<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context="com.rip.roomies.activities.SharedItemsPage.SharedItemsPage">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Shared Items"
                android:textSize="30dp"
                android:textAlignment="center"
                android:layout_weight=".95"
                android:id="@+id/textView" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:id="@+id/addItem"
            android:layout_margin="5dp"
            android:layout_weight="0.05"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:background="@drawable/circle" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Scheduled"
            android:id="@+id/textView2"
            android:textSize="20dp"
            android:layout_gravity="center_horizontal" />



        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="     Rent"
            android:id="@+id/button2"
            android:background="@drawable/buttons"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:gravity="center|left"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="     Water Filter"
            android:id="@+id/button"
            android:background="@drawable/buttons"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:gravity="center|left"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="     Printer Paper"
            android:id="@+id/button"
            android:background="@drawable/buttons"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:gravity="center|left"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="     Ink"
            android:id="@+id/button"
            android:background="@drawable/buttons"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:gravity="center|left"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:layout_width="396dp"
            android:layout_height="50dp"
            android:text="     Significant Other"
            android:background="@drawable/buttons"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:gravity="center|left"
            android:textColor="@color/colorPrimary"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Unscheduled"
            android:id="@+id/textView2"
            android:textSize="20dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="396dp"
            android:layout_height="50dp"
            android:text="     Sofa"
            android:background="@drawable/buttons"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:gravity="center|left"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:layout_width="396dp"
            android:layout_height="50dp"
            android:text="     Pots"
            android:background="@drawable/buttons"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:gravity="center|left"
            android:textColor="@color/colorPrimary"/>

        <Button
            android:layout_width="396dp"
            android:layout_height="50dp"
            android:text="     Printer"
            android:background="@drawable/buttons"
            android:id="@+id/button3"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:textSize="30dp"
            android:gravity="center|left"
            android:textColor="@color/colorPrimary"/>
    </LinearLayout>

    <!--    android:layout_height="wrap_content" -->

</LinearLayout>

